{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "types": ["node"]
  },
  "include": ["*.ts", "lib/**/*.ts", "bin/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
